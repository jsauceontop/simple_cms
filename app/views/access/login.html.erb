<% @page_title = "Admin Login" %>

<h1>Admin Login</h1>
<%= form_tag(:action => 'attempt_login') do %>
<table>
	<tr>
		<td><%= label_tag(:name) %></td>
		<td><%= text_field_tag(:name) %></td>
	</tr>
	<tr>
		<td><%= label_tag(:password) %></td>
		<td><%= text_field_tag(:password) %></td>
	</tr>
	<tr>
		<td><%= submit_tag("Log In") %></td>
	</tr>
</table>
<% end %>
